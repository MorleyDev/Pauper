{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "es2017",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true
    },
    "exclude": [
        "node_modules/**/*",
        "dist/**/*"
    ]
}